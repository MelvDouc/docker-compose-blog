{
  "compilerOptions": {
    /* Compilation */
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "skipLibCheck": true,
    /* Modules */
    "module": "Node18",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    /* Strictness */
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    /* TypeORM */
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    /* Path aliases */
    "baseUrl": ".",
    "paths": {
      "$server/*": [
        "./src/*"
      ],
      "$common/*": [
        "../common/*"
      ]
    }
  }
}